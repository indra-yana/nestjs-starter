{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "core/resources/lang/**/*.json",
        "watchAssets": true
      },
      {
        "include": "core/resources/views/email/**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "../public/assets/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ]
  }
}